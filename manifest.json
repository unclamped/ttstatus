{
  "manifest_version": 3,
  "name": "TTStatus",
  "version": "1.0",

  "description": "Checks the status of some sites automatically so you don't have to :3",
  "homepage_url": "https://github.com/unclamped/ttstatus",

  "icons": {
    "48": "icons/ttstatus-48.png",
    "96": "icons/ttstatus-96.png"
  },

  "permissions": ["activeTab", "tabs"],
  "host_permissions": [
    "*://*.trackerstatus.info/api/*"
  ],

  "action": {
    "default_icon": { 
      "32": "icons/ttstatus-32.png",
      "48": "icons/ttstatus-96.png",
      "96": "icons/ttstatus-96.png"
    },
    "default_title": "TTStatus",
    "default_popup": "popup/menu.html"
  },

  "background": {
    "scripts": ["ttstatus.js"],
    "type": "module"
  }
}
